<h1>Esports companies in <%= @country.name %></h1>

<ul>
<% @cities.each do |city| %>
  <li><%= link_to city.name, city_path(city.friendly_id) %></li>
<% end %>
</ul>



<% @companies.each do |company| %>

<h2><a href="<%= company.url%>"><%= company.name %></a></h2>
<p><%= company.description %></p>
<ul>
  <li><%= company.city.name %>, <%= company.city.country.name %></li>
  <li><%= company.size %></li>
  <li><%= company.linkedin %></li>
  <li><%= company.twitter %></li>
</ul>

<% end %>